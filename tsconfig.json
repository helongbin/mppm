{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "es5",
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "dist"
  },
  "include": [
    "./client/**/*",
    "./src/**/*",
    "./types"
  ],
  "exclude": [
    "node_modules"
  ]
}
